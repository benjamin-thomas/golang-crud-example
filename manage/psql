#!/bin/bash

set -e
APP_NAME=$(basename $(pwd))

set -x -a
source ~/.env/$APP_NAME
PGHOST=$(docker inspect --format '{{ .NetworkSettings.IPAddress  }}' ${APP_NAME}-pg)

docker run --rm -it --name "$PGDATABASE-psql-interactive" \
         --env PGDATABASE=$PGDATABASE \
         --env PGHOST=$PGHOST \
         --env PGPORT=$PGPORT \
         --env PGUSER=$PGUSER \
         --env PGPASSWORD=$PGPASSWORD \
         postgres psql "$@"
